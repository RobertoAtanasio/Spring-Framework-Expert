<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<Context>
    <Resource name="jdbc/brewerDB" auth="Container" 
            factory="org.apache.naming.factory.BeanFactory"
            type="com.mchange.v2.c3p0.ComboPooledDataSource"
            driverClass="com.mysql.cj.jdbc.Driver"
            jdbcUrl="jdbc:mysql://localhost:3306/brewer?useLegacyDatetimeCode=false;useSSL=false;useTimezone=true;serverTimezone=UTC"
            user="root"
            password="root" 
            initialPoolSize="5" 
            minPoolSize="5"
            maxPoolSize="5" 
     />
</Context>

